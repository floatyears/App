<h2>SkillConvertUnitType</h2>
<table class="table table-bordered table-hover">
	<thead>
		<tr>
      <th>baseInfo</th>
      <th>type</th>
      <th>unitType1</th>
      <th>unitType2</th>
      <th>操作</th>
    </tr>
  </thead>
	<tbody>
    <% if @all_skills[:ConvertUnitType].present? %>
    
    <% @all_skills[:ConvertUnitType].each_with_index do |skill,index|%>
    <tr>
      <td>
        {
          id:<%= skill[:baseInfo][:id]%>,
          name:<%= skill[:baseInfo][:name].force_encoding("UTF-8")%>,
          description:<%= skill[:baseInfo][:description].force_encoding("UTF-8")%>,
          skillCooling:<%= skill[:baseInfo][:skillCooling]%>
        }
      </td>
      <td><%=skill[:type] %></td>
      <td><%=skill.try(:unitType1) %></td>
      <td><%=skill.try(:unitType2) %></td>
      <td><%=link_to "修改",edit_skill_path(skillType: "ConvertUnitType",id: index,method: "PATCH") %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>